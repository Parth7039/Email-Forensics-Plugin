{
  "manifest_version": 3,
  "name": "Gmail Spam Scanner",
  "version": "1.0",
  "description": "Scans opened emails in Gmail for potential spam.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://mail.google.com/",
    "http://127.0.0.1:8000/"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content_script.js"]
    }
  ]
}