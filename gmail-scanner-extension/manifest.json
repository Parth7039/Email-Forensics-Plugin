{
  "manifest_version": 3,
  "name": "Gmail Spam Scanner",
  "version": "2.0",
  "description": "Scans Gmail emails for potential spam using ML server.",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "contextMenus"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content_script.js"]
    }
  ]
}