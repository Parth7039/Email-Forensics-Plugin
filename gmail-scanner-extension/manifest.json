{
  "manifest_version": 3,
  "name": "Gmail Spam Scanner",
  "version": "1.3",
  "description": "Scans Gmail emails for potential spam using a local ML model.",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "contextMenus"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["spam_model.js", "content_script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["spam-model.json", "emails.csv"],
      "matches": ["https://mail.google.com/*"]
    }
  ]
}
