{
  "manifest_version": 3,
  "name": "Gmail Spam Scanner",
  "version": "1.5",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "contextMenus",
    "identity"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://www.googleapis.com/*",
    "https://ipapi.co/*",
    "https://ip-api.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["spam_model.js", "content_script.js"]
    }
  ],
  "oauth2": {
    "client_id": "155308939973-92mtu4e8mosho9fmjp5pvagvnp79a2vi.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["spam-model.json"],
      "matches": ["https://mail.google.com/*"]
    }
  ]
}
